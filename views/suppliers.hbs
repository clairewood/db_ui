{{!-- Create a table --}}
<table id="suppliers-table">
    {{!-- Header section --}}
    <thead>
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr data-value={{this.supplier_id}}>
            <td>{{this.supplier_id}}</td>
            <td>{{this.supplier_name}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{!-- Form to add a record to the table  --}}
<h2>Add a Supplier</h2>
<p>To add a new supplier, please fill in ALL fields below and click 'Submit'!</p>
<form id="add-supplier-form-ajax">
    <label for="input-supplier_name">Supplier Name: </label>
    <input type="text" name="input-supplier_name" id="input-supplier_name">

    <input type="submit">

</form>
<script src="./js/add_supplier.js"></script>

